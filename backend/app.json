{
  "name": "InterviewAce Backend",
  "description": "Backend API for InterviewAce Interview Preparation Platform",
  "repository": "https://github.com/your-username/interviewace",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "typescript", "pdf", "stripe"],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack.git"
    }
  ],
  "addons": [
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": {
      "description": "Skip Puppeteer Chromium download to prevent build timeouts",
      "value": "true"
    },
    "PUPPETEER_EXECUTABLE_PATH": {
      "description": "Path to Chromium executable provided by buildpack",
      "value": "/app/.chrome-for-testing/chrome-linux64/chrome"
    },
    "NPM_CONFIG_LOGLEVEL": {
      "description": "Reduce npm log verbosity to speed up builds",
      "value": "warn"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  }
}